mixin link(href, name)
    a(href=href)&attributes(attributes)= name

mixin li(href, name)
    li.d-flex.align-items-center
        span(class != attributes.class)
        a(href=href)= name

block aside

aside.d-flex.align-items-center.justify-content-center
    //- h3 Profile
    .User-profile.d-none(data-filter='Profile')
        .container-fluid
            .row.align-items-center.justify-content-start
                .col-3.text-center
                    a(href='/').User-profile-img
                        img(src='assets/img/user/avatar-125.png')
                .col-7.col-sm-7
                    ul.d-flex.flex-column.align-items-start.justify-content-start
                        +li('#', 'Favorite')(class="sprite sprite-favorite")
                        +li('#', 'Compare')(class="sprite sprite-compare ")
                        +li('#', 'Cart')(class="sprite sprite-cart")
    //- h3 Menu
    nav.Menu.flex-column.align-items-center.justify-content-center(data-filter='Menu')
        +link('#', 'Electronics')(class="")
        +link('#', 'Appliances')(class="active ")
        +link('#', 'Childrens goods')(class="")
        +link('#', 'Repairs')(class="")
        +link('#', 'Clothes')(class="")
        +link('#', 'Footwear')(class="")
        +link('#', 'Beauty')(class="")
    
    .btn-filter-3
        button.border-left-radius(type='button' data-btn-filter='Profile')
            | Profile
        button.active(type='button' data-btn-filter='Menu')
            | Menu
        button.border-right-radius(type='button' data-btn-filter='Close')
            | Close