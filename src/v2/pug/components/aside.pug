mixin link(href, name)
    a(href=href)&attributes(attributes)= name

mixin li(href, name)
    li.d-flex.align-items-center
        span(class != attributes.class)
        a(href=href)= name

block aside

aside.align-items-center.justify-content-center
    button(type='button').btn-close.position-fixed
    .User-profile.d-flex.align-items-center.justify-content-center
        .container-fluid
            .row.align-items-center.justify-content-center
                .col-3.col-sm-2.text-center
                    a(href='/').User-profile-img
                        img(src='assets/img/Avatar.png')
                .col-12.col-sm-10
                    ul.d-flex.align-items-center
                        +li('/Favorite', 'Favorite')(class="sprite sprite-favorite")
                        +li('/Compare', 'Compare')(class="sprite sprite-compare ")
                        +li('/Cart', 'Cart')(class="sprite sprite-cart")
    .container-fluid
        .row.align-items-center.justify-content-center
            include ../elements/search-input
        .row
            nav.d-flex.flex-column.border-top.border-bottom
                +link('/Electronics', 'Electronics')(class="text-center")
                +link('/Appliances', 'Appliances')(class="active text-center")
                +link('/Childrens goods', 'Childrens goods')(class="text-center")
                +link('/Repairs', 'Repairs')(class="text-center")
                +link('/Clothes', 'Clothes')(class="text-center")
                +link('/Footwear', 'Footwear')(class="text-center")
                +link('/Beauty', 'Beauty')(class="text-center")
        .row
            nav.Aside-footer
                a(href='/') Mobile version
                a(href='/') Statistics
                a(href='/') Advertising